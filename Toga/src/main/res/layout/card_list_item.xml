<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/card_list_item_layout"
              style="@style/card_outer">

    <ImageView
            android:id="@+id/cardImage"
            android:layout_height="96dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            />

    <RelativeLayout android:id="@+id/inner_frame" style="@style/card_inner">

        <ImageView android:id="@android:id/icon" style="@style/card_thumbnail"/>

        <RelativeLayout android:id="@+id/titleFrame" style="@style/card_title_frame">

            <TextView android:id="@android:id/title" style="@style/card_title"/>

            <!--<ImageButton android:id="@android:id/button1" style="@style/card_popup_anchor"/>-->

        </RelativeLayout>

        <TextView android:id="@android:id/content" style="@style/card_content"/>

    </RelativeLayout>

    <ImageView style="@style/card_shadow"/>

</LinearLayout>

