<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/new_user_password_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e5e5e5">
              <!--android:background="@drawable/new_user_background"-->

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/pressed_toga"
            android:textSize="30sp"
            android:text="@string/choose_password"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="24dp"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            />

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/header_grey"
            android:textSize="14sp"
            android:text="Pick a password that will be easy to remember.\nPassword must be at least 6 characters."
            android:layout_marginLeft="26dp"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            />

    <EditText
            android:id="@+id/new_user_password_edittext"
            android:inputType="textPassword"
            android:textColor="@color/header_grey"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:textSize="16sp"
            android:hint="Password"
            android:layout_marginBottom="8dp"
            />

    <Button
            android:id="@+id/new_user_password_continue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:text="Sign up"
            android:layout_marginRight="24dp"
            android:textColor="@color/header_grey"
            />

</LinearLayout>